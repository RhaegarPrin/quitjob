<?xml version="1.0" encoding="utf-8"?>


<odoo>
    <record id="emp_req_form" model="ir.ui.view">
        <field name="name">Employee Request Form</field>
        <field name="model">employee.req</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="status" widget="statusbar"/>
                </header>
                <sheet>
                    <form>
                        <strong>Employee :</strong>
                        <field name="rela_user" readonly="1"/>
                    </form>
                    <form>
                        <strong>DL :</strong>
                        <field name="dl_id" attrs="{'readonly': [('dl_first_accept', '=', True)]}"/>
                        <field name="pm_id" attrs="{'readonly': [('dl_first_accept', '=', True)]}"/>
                    </form>
                    <form>
                        <strong>IT :</strong>
                        <field name="it_id" attrs="{'readonly': [('dl_first_accept', '=', True)]}"/>
                    </form>
                    <form>
                        <strong>Request Date :</strong>
                        <field name="req_date" readonly="1"/>
                    </form>
                    <form>
                        <field name="est_date" attrs="{'readonly': [('dl_first_accept', '=', True)]}"/>
                    </form>
                    <form>
                        <strong>Ly do :</strong>
                        <field name="reason" attrs="{'readonly': [('dl_first_accept', '=', True)]}"/>
                    </form>
                    <!--                    <form>-->
                    <!--                        <strong>Status :</strong>-->
                    <!--                        <field name="status" readonly="1"/>-->
                    <!--                    </form>-->
                    <notebook>

                        <page string="DL confirm ">
                            <form>
                                <span>DL accept 1
                                    <field name="dl_first_accept" readonly="1"
                                           attrs="{'invisible': [('dl_first_accept', '=', False)]}"/>
                                </span>
                                <span>DL accept 2
                                    <field name="dl_second_accept" readonly="1"
                                           attrs="{'invisible': [('dl_second_accept', '=', False)]}"/>
                                </span>
                            </form>
                        </page>

                        <page string="PM confirm ">
                            <form>
                                <span>PM
                                    <field name="pm_accept" readonly="1"
                                           attrs="{'invisible': [('pm_accept', '=', False)]}"/>
                                </span>
                            </form>
                            <form>
                                <strong>Interview :</strong>
                                <field name="interview_ids"/>
                            </form>
                        </page>

                        <page string="HR confirm ">
                            <form>
                                <span>HR
                                    <field name="hr_accept" readonly="1"
                                           attrs="{'invisible': [('hr_accept', '=', False)]}"/>
                                </span>
                            </form>
                        </page>
                        <page string="IT confirm">
                            <span>Other
                                <field name="other_confirm" readonly="1"
                                       attrs="{'invisible': [('other_confirm', '=', False)]}"/>
                            </span>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="emp_req_kanban" model="ir.ui.view">
        <field name="name">Emp req kanban</field>
        <field name="model">employee.req</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <form>
                                <span>Name:
                                    <field name="rela_user"/>
                                </span>
                            </form>
                            <form>
                                <span>DL Acc1:
                                    <field name="dl_first_accept"/>
                                </span>
                            </form>
                            <form>
                                <span>PM Acc:
                                    <field name="pm_accept"/>
                                </span>
                            </form>
                            <form>
                                <span>DL Acc2:
                                    <field name="dl_second_accept"/>
                                </span>
                            </form>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="emp_req_tree" model="ir.ui.view">
        <field name="name">Emp req tree</field>
        <field name="model">employee.req</field>
        <field name="arch" type="xml">
            <tree>
                <field name="rela_user"/>
                <field name="req_date"/>
                <field name="est_date"/>
                <field name="reason"/>
                <field name="dl_first_accept"/>
                <field name="dl_second_accept"/>
                <field name="pm_accept"/>
                <field name="hr_accept"/>
                <field name="other_confirm"/>
            </tree>
        </field>
    </record>

    <record id="inherited_emp_rep_form" model="ir.ui.view">
        <field name="name">inherited.dl_req_form</field>
        <field name="model">employee.req</field>
        <field name="inherit_id" ref="emp_req_form"/>
        <field name="groups_id" eval="[(4, ref('group_emp_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='status']" position="before">
                <button name="send_req" type="object" string="send req">Send rq</button>
                <button name="cancel_send_req" type="object" string="cancel req">Cancel rq</button>
            </xpath>
        </field>
    </record>

    <record id="inherited_dl_rep_form" model="ir.ui.view">
        <field name="name">inherited.dl_req_form</field>
        <field name="model">employee.req</field>
        <field name="inherit_id" ref="emp_req_form"/>
        <field name="groups_id" eval="[(4, ref('group_dl_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reason']" position="after">
                <fiel name="rela_user" string="User"/>
                <button name="Dl_approud_1" type="object" attrs="{'invisible':[('pm_accept','=',True)]}">DL 1 Appr
                </button>
                <button name="Dl_approud_1_cancel" type="object" attrs="{'invisible':[('pm_accept','=',True)]}">Cancel 1
                    Appr
                </button>

                <button name="Dl_approud_2" type="object" attrs="{'invisible':[('pm_accept','=',False)]}">DL Appr 2
                </button>
                <button name="Dl_approud_2_cancel" type="object" attrs="{'invisible':[('pm_accept','=',False)]}">Cancel
                    DL Appr 2
                </button>
            </xpath>
            <xpath expr="//field[@name='dl_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='pm_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='it_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='reason']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="inherited_pm_rep_form" model="ir.ui.view">
        <field name="name">inherited.dl_req_form</field>
        <field name="model">employee.req</field>
        <field name="inherit_id" ref="emp_req_form"/>
        <field name="groups_id" eval="[(4, ref('group_pm_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reason']" position="after">
                <fiel name="rela_user" string="User"/>
                <button name="PM_approud" type="object">PM Appr</button>
                <button name="PM_approud_cancel" type="object">PM Appr cancel</button>
                <button name="delete_rec" type="object">Delete</button>
            </xpath>
        </field>
    </record>

    <record id="inherited_hr_rep_form" model="ir.ui.view">
        <field name="name">inherited.dl_req_form</field>
        <field name="model">employee.req</field>
        <field name="inherit_id" ref="emp_req_form"/>
        <field name="groups_id" eval="[(4, ref('group_hr_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reason']" position="after">
                <button name="HR_approud" type="object">HR Appr</button>
                <button name="HR_approud_cancel" type="object">HR Appr cancel</button>
            </xpath>
            <xpath expr="//field[@name='dl_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='pm_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='it_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='reason']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>

    <record id="inherited_it_rep_form" model="ir.ui.view">
        <field name="name">inherited.it_req_form</field>
        <field name="model">employee.req</field>
        <field name="inherit_id" ref="emp_req_form"/>
        <field name="groups_id" eval="[(4, ref('group_it_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reason']" position="after">
                <button name="it_confirm" type="object">IT confirm</button>
            </xpath>
            <xpath expr="//field[@name='dl_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='pm_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='it_id']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
            <xpath expr="//field[@name='reason']" position="attributes">
                <attribute name="readonly">1</attribute>
            </xpath>
        </field>
    </record>
</odoo>