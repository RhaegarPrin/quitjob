<?xml version="1.0" encoding="utf-8"?>


<odoo>
    <record id="emp_req_form" model="ir.ui.view">
        <field name="name">Employee Request Form</field>
        <field name="model">employee.req</field>
        <field name="arch" type="xml">
            <form>
                <form>
                    <strong>Employee :</strong>
                    <field name="rela_user"/>
                </form>
                <form>
                    <strong>DL :</strong>
                    <field name="dl_id"/>
                </form>
                <form>
                    <strong>Request Date :</strong>
                    <field name="req_date"/>
                </form>
                <form>
                    <strong>Ly do :</strong>
                    <field name="reason"/>
                </form>
                <form>
                    <strong>Status :</strong>
                    <field name="status" readonly="1"/>
                </form>
                <form>
                    <field name="dl_first_accept" attrs="{'invisible': [('dl_first_accept', '=', False)]}"/>
                    <field name="dl_second_accept" attrs="{'invisible': [('dl_second_accept', '=', False)]}"/>
                    <field name="pm_accept" attrs="{'invisible': [('pm_accept', '=', False)]}"/>
                    <field name="hr_accept" attrs="{'invisible': [('hr_accept', '=', False)]}"/>
                    <field name="other_confirm" attrs="{'invisible': [('other_confirm', '=', False)]}"/>
                </form>
            </form>
        </field>
    </record>

    <record id="inherited_emp_rep_form" model="ir.ui.view">
        <field name="name">inherited.dl_req_form</field>
        <field name="model">employee.req</field>
        <field name="inherit_id" ref="emp_req_form"/>
        <field name="groups_id" eval="[(4, ref('group_emp_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='status']" position="after">
                <form>
                    <button name="send_req" type="object" >Send rq</button>
                    <button name="cancel_send_req" type="object" >Cancel rq</button>
                </form>
            </xpath>
        </field>
    </record>

    <record id="inherited_dl_rep_form" model="ir.ui.view">
        <field name="name">inherited.dl_req_form</field>
        <field name="model">employee.req</field>
        <field name="inherit_id" ref="emp_req_form"/>
        <field name="groups_id" eval="[(4, ref('group_dl_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reason']" position="after">
                <fiel name="rela_user" string="User"/>
                <button name="Dl_approud_1" type="object">DL Appr</button>
            </xpath>
        </field>
    </record>

    <record id="inherited_pm_rep_form" model="ir.ui.view">
        <field name="name">inherited.dl_req_form</field>
        <field name="model">employee.req</field>
        <field name="inherit_id" ref="emp_req_form"/>
        <field name="groups_id" eval="[(4, ref('group_pm_user'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reason']" position="after">
                <fiel name="rela_user" string="User"/>
                <button name="PM_approud" type="object">PM Appr</button>
            </xpath>
        </field>
    </record>
</odoo>