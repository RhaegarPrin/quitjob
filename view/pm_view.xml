<?xml version="1.0" encoding="utf-8"?>


<odoo>
    <record id="pm_req_form" model="ir.ui.view">
        <field name="name">PM Request Form</field>
        <field name="model">pm.req</field>
        <field name="arch" type="xml">
            <form>
                <form>
                    <strong>Employee :</strong>
                    <field name="name"/>
                </form>
                <form>
                    <strong>hr_rq :</strong>
                    <field name="hr_id"/>
                </form>
                <form>
                    <strong>DL:</strong>
                    <field name="dl_reqs"/>
                </form>
                <form>
                    <strong>Employee Rq</strong>
                    <field name="emp_reqs"/>
                </form>
            </form>
        </field>
    </record>

    <record id="pm_req_kanban" model="ir.ui.view">
        <field name="name">PM Request Kanban</field>
        <field name="model">pm.req</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_card oe_kanban_global_click">
                            <span>Name:
                                <field name="rela_user"/>
                            </span>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>